 <!DOCTYPE html>
<html>
                <div class="card-header d-flex align-items-center">
                    <h3 class="h4">Chi tiết người dùng</h3>
                </div>
                <div class="container">
                <div class="row">
                <div class="card-body bg-white">
                    <div class="row">
                        <!-- Form Panel    -->
                        <div class="col-lg-7 bg-white">
                          <div class="form d-flex align-items-center">
                            <div class="content">
                              <form class="form-validate">
                                <div class="form-group">
                                  <strong>Tên người dùng</strong> 
                                  <p>{{user.username}}</p>
                                </div>
                                <div class="form-group">
                                  <strong>Giới tính</strong> 
                                  <p>{{user.sex}}</p>
                                </div>
                                <div class="form-group">
                                  <strong>Ngày sinh</strong> 
                                  <p>{{birthday}}</p>
                                </div>
                                <div class="form-group">
                                  <strong>Email:</strong> 
                                  <p>{{user.email}}</p>
                                </div>
                                <div class="form-group">
                                  <strong>Địa chỉ:</strong> 
                                  <p>{{user.address}}</p>
                                </div>
                            </div>
                          </div>
                           <div class="row">
                              <div class="col-lg-3">
                                <a href="javascript:history.back()" class="btn btn-primary">Trở về</a>
                              </div>
                              <div class="col-lg-3">
                                      <div class="form-group">
                                          <button class="btn btn-primary" formaction="/accounts/delete/{{user._id}}">Xóa</button>
                                      </div>
                              </div>
                          </div>
                        </div>
                    </div>
                </div>
              </div>
          </div>        
</html>