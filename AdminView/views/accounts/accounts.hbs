<!DOCTYPE html>
<html>
 <style>
    .btn-add{
     background-color: rgb(181, 218, 205);
     margin-right: 0%;
   }
    .btn{
	  margin-left:10px;
   }
  
 </style>
 <div class="card-header d-flex align-items-center">
                      <div class="col-sm-6 ">
                       <h3 class="h4">{{title}}</h3>
                      </div> 
    </div>
  <div class="card-body">
          <table class="table table-striped table-bordered">
                          <thead>
                            <tr>
                              <th style="width:5%">STT</th>
                              <th style="width:20%">Tên User</th>
                              <th style="width:15%">Giới tính</th>
                              <th style="width:40%">Địa chỉ</th>
                              <th style="width:20%">Xử lý</th>
                            </tr>
                          </thead>
                          {{#each list_users}}
                              <tr>
                                <th scope="row">{{inc @index}}</th>
                                <td>{{this.username}}</td>
                                <td>{{this.sex}}</td>
                                <td>{{this.address}}</td>
                                <td>
                                  <div class="row button">
                                    <form>
                                      <button class="btn" formaction="/accounts/delete/{{this._id}}"><i class="far fa-trash-alt"></i></button>
                                    </form>
                                    <form>
                                      <button class="btn" formaction="/accounts/detail/{{this._id}}"><i class="fa fa-info-circle"></i></button>
                                    </form>
                                    {{#ifCond this.lock 'true'}}
                                    <form>
                                      <button class="btn" formaction="/accounts/unlock/{{this._id}}"><i class="fa fa-unlock-alt"></i></button>
                                    </form>
                                    {{else}}
                                    <form>
                                      <button class="btn" formaction="/accounts/lock/{{this._id}}"><i class="fa fa-lock"></i></button>
                                    </form>
                                    {{/ifCond}}
                                  </div>
                                </td>
                              </tr>
                            
                          {{/each}}
          </table>
          <nav aria-label="..." class="mx-auto">
                            <ul class="pagination">
                              {{#each page}}
                                <li class="page-item"><a class="page-link" href="{{../linkPage}}/{{this}}">{{this}}</a></li>
                              {{/each}}
                            </ul>
                          </nav>
  </div>
</html>
