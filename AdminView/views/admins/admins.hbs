<!DOCTYPE html>
<html>
  <style>
    .btn-add{
     background-color: rgb(181, 218, 205);
     margin-right: 0%;
   }
    .btn{
	  margin-left:10px;
   }
  
 </style>
 <div class="card-header d-flex align-items-center">
                      <div class="col-sm-6 ">
                       <h3 class="h4">{{title}}</h3>
                      </div>
                      <div class="col-sm-6 d-flex text-right">
                        <form class="row m-l-200">
                          <button class="btn-add m-l-400" formaction="/signup"><i class="far fa-plus-square"></i></button>
                          <h6 class="m-l-10 m-t-3">Thêm quản trị viên</h6>
                        </form>
                      </div>
    </div>
  <div class="card-body">
          <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th style="width:5%">STT</th>
                    <th style="width:20%">Tên User</th>
                    <th style="width:15%">Chức vụ</th>
                    <th style="width:40%">Email</th>
                    <th style="width:20%">Xem chi tiết</th>
                </tr>
                </thead>
                {{#each list_admins}}
                    <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.email}}</td>
                    <td>
                      <form>
                        <button class="btn" formaction="/admins/detail/{{this._id}}"><i class="fa fa-info-circle"></i></button>
                      </form>
                    </td>
                    </tr>
                {{/each}}
          </table>
  </div>
</html>
