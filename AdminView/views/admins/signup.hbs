  <body>
    <div class="page login-page">
      <div class="container d-flex align-items-center">
        <div class="form-holder has-shadow">
          <div class="row">
            <!-- Logo & Information Panel-->
            <div class="col-lg-6">
              <div class="info d-flex align-items-center">
                <div class="content">
                  <div class="logo">
                    <h1>Dashboard</h1>
                  </div>
                </div>
              </div>
            </div>
            <!-- Form Panel    -->
            <div class="col-lg-6 bg-white">
              <div class="form align-items-center">
                 {{#if sessionFlash.message}}
                    <div class="alert alert-danger">{{sessionFlash.message}}</div>
                  {{/if}}
                  <form  action="\signup" method="POST" class="form-validate">
                    <div class="form-group">
                      <input id="name" type="text" name="name" required data-msg="Vui lòng nhập họ và tên" class="input-material" placeholder="Họ và tên">
                    </div>
                    <div class="form-group">
                      <input id="title" type="text" name="title" required data-msg="Vui lòng nhập chức vụ" class="input-material" placeholder="Chức vụ">
                    </div>
                    <div class="form-group">
                      <input id="email" type="email" name="email" required data-msg="Vui lòng nhập địa chỉ email hợp lệ" class="input-material" placeholder="Email">
                    </div>
                    <div class="form-group">
                      <input id="birthday" type="date" name="birthday" required class="input-material" placeholder="Ngày sinh">
                    </div>
                    <div class="form-group">
                      <input id="phone" type="tel"  name="phone" required class="input-material" placeholder="Số điện thoại">
                    </div>
                    {{#if sessionFlash.message2}}
                        <div>
                          <div class="alert alert-danger">{{sessionFlash.message2}}</div>
	                      </div>
                     {{/if}}
                    <div class="form-group">
                      <input id="address" type="text" name="address" required class="input-material" placeholder="Địa chỉ">
                    </div>
                    <div class="row">
                      <div class="form-group m-l-15 m-t-10">
                        <div>Giới tính:</div>
                      </div>
                      <div class="form-group m-l-20 m-t-10">
                        <select name="gender">
                          <option id = "male" value="Nam">Nam</option>
                          <option id = "female" value="Nữ">Nữ</option>
                          <option id = "other" value="Khác">Khác</option>
                        </select>
                      </div>
                    </div>
                    <div class="form-group">
                      <input id="pass" type="password" name="pass" required data-msg="Vui lòng nhập mật khẩu" class="input-material" placeholder="Mật khẩu">
                    </div>
                     {{#if sessionFlash.message1}}
                        <div>
                          <div class="alert alert-danger">{{sessionFlash.message1}}</div>
	                      </div>
                     {{/if}}
                    <div class="form-group">
                      <input id="repass" type="password" name="repass" required data-msg="Vui lòng nhập lại mật khẩu" class="input-material" placeholder="Nhập lại mật khẩu">
                    </div>
                    <div class="form-group">
                      <button id="regidter" type="submit" name="registerSubmit" class="btn btn-primary">Đăng ký</button>
                    </div>
                  </form><small>Bạn đã có tài khoản? </small><a href="/" class="signup">Đăng nhập</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="copyrights text-center">
        <p>Design by <a href="https://bootstrapious.com" class="external">Bootstrapious</a>
          <!-- Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions. Thank you for understanding :)-->
        </p>
      </div>
    </div>
