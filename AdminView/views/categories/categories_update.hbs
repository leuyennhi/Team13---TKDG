 <!DOCTYPE html>
<html>
                <div class="card-header d-flex align-items-center">
                    <h3 class="h4">Chỉnh sửa loại sản phẩm</h3>
                </div>
                <div class="card-body bg-white">
                    <div class="row">
                        <!-- Form Panel    -->
                          <div class="col-lg-7 bg-white">
                          <div class="form d-flex align-items-center">
                            <div class="content">
                              <form class="form-validate" method="POST" action="/categories/update/{{category._id}}">
                                <div class="form-group">
                                  <strong>Tên loại sản phẩm</strong> 
                                  <input type="text" class="input-material " value="{{category.name}}" name="name" id="name">
                                  <br><br>
                                   <div class="row form-group">
                                    <div class="col-lg-3">
                                      <div class="form-group">
                                        <button type ="submit" class="btn btn-primary">Cập nhật</button>
                                      </div>
                                    </div>
                                    <div class="col-lg-3 m-l-100">
                                      <a href="javascript:history.back()" class="btn btn-primary">Hủy</a>
                                    </div>
                                  </div>
                                </div> 
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
            
</html>