{{#section 'css'}}
<link href="/components/component-product.css" rel="stylesheet" />
<link href="/pages/page-home/style.css" rel="stylesheet" />
{{/section}}

<div class="page-home">
    <!-- Product -->
    <div class="products">

        <div class="title">
            <div class="inner">
                <div>Sản phẩm bán chạy</div>
                <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Maiores distinctio obcaecati ratione natus
                    consectetur, aliquam quo labore rerum omnis vel nemo necessitatibus officia nihil, laudantium
                    cupiditate, eius minus suscipit corporis.
                </p>
                <a href="/product">Xem tất cả&ensp;<i class="zmdi zmdi-chevron-right"></i></a>
            </div>

        </div>
        <div class="content">
            <div class="row">
                {{#each products}}
                <div class="col-6 col-sm-6 col-md-6 col-lg-4 col-xl-3 d-flex">
                    <div class="component-product card">
                        <div class="product-image">
                            <img data-toggle="tooltip" title="{{this.name}}" src="{{this.img}}" class="card-img-top"
                                alt="...">
                            <a href="/product/detail/{{this._id}}" class="stretched-link"></a>
                            <div class="deal-tag">30%</div>
                            <div class="hover-div">
                                <a href="#"><i class="fas fa-shopping-cart"></i>&ensp;Mua hàng</a>
                                <div>&nbsp;|&nbsp;</div>
                                <a href="/product/detail/{{this._id}}" class="mr-3"><i class="far fa-eye"></i>&ensp;Chi
                                    tiết</a>
                            </div>
                        </div>

                        <div class="card-body">
                            <a href="/product/detail/{{this._id}}" class="card-title m-0">{{this.name}}</a>
                            <div class="m-0 mt-1 d-flex justify-content-center">
                                <span class="sale-price">{{formatPrice this.price}}<u>đ</u></span>
                                <span class="original-price ml-3">
                                    195,000<u>đ</u>
                                </span>
                            </div>
                            <button class="btn favorite-btn"><i class="far fa-heart"></i></button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <nav aria-label="..." class="mx-auto">
            <ul class="pagination">
                {{#each pageNumbers}}
                {{#if active}}
                <li class="page-item"><a class="page-link active"
                        href="?pageNumber={{value}}{{createQueryProductSearch ../productName}}">{{value}}</a>
                </li>
                {{else}}
                <li class="page-item"><a class="page-link"
                        href="?pageNumber={{value}}{{createQueryProductSearch ../productName}}">{{value}}</a>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </nav>
    </div>
</div>

{{#section 'js'}}
{{/section}}