	<div class="container product-detail-component">
		<h2>Chi tiết sản phẩm</h2>
		<div class="data">
			<div class="items-detail">
				<div class="item">
					<h3 class="title">Xuất xứ</h3>
					<h3 class="value">Việt Nam</h3>
				</div>
				<div class="item">
					<h3 class="title">Thương hiệu</h3>
					<h3 class="value">No brand</h3>
				</div>
				<div class="item">
					<h3 class="title">Chất liệu</h3>
					<h3 class="value">Cotton</h3>
				</div>
			</div>
			<div class="items-detail">
				<div class="item">
					<h3 class="title">Màu sắc</h3>
					<h3 class="value">{{item.color}}</h3>
				</div>
				<div class="item">
					<h3 class="title">Kích cỡ</h3>
					<h3 class="value">S, M, L</h3>
				</div>
				<div class="item">
					<h3 class="title">Kho hàng</h3>
					<h3 class="value">20</h3>
				</div>
			</div>
		</div>
	</div>

	<div class="container product-description-component">
		<h2>Mô tả sản phẩm</h2>
		<p>{{item.description}}</p>
	</div>

	<div class="container evaluation-component">
		<h2>Đánh giá sản phẩm</h2>
		<div class="evaluation">
			<div class="rating-component">
				<div class="average-rating">
					<h1>4.75</h1>
					<h4>(120 bình chọn)</h4>
				</div>
				<div class="detail-rating">
					<div class="item-detail-rating">
						<h5>
							5
							<i class="fa fa-star icon-star"></i>
						</h5>
						<div class="progress my-process">
							<div class="progress-bar my-process-bar" role="progressbar" style="width: 75%;"
								aria-valuenow="90" aria-valuemin="0" aria-valuemax="120"></div>
						</div>
					</div>
					<div class="item-detail-rating">
						<h5>
							4
							<i class="fa fa-star icon-star"></i>
						</h5>
						<div class="progress my-process">
							<div class="progress-bar my-process-bar" role="progressbar" style="width: 25%;"
								aria-valuenow="30" aria-valuemin="0" aria-valuemax="120"></div>
						</div>
					</div>
					<div class="item-detail-rating">
						<h5>
							3
							<i class="fa fa-star icon-star"></i>
						</h5>
						<div class="progress my-process">
							<div class="progress-bar my-process-bar" role="progressbar" style="width: 0%;"
								aria-valuenow="{{newOrder}}" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
					</div>
					<div class="item-detail-rating">
						<h5>
							2
							<i class="fa fa-star icon-star"></i>
						</h5>
						<div class="progress my-process">
							<div class="progress-bar my-process-bar" role="progressbar" style="width: 0%;"
								aria-valuenow="{{newOrder}}" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
					</div>
					<div class="item-detail-rating">
						<h5>
							1
							<i class="fa fa-star icon-star"></i>
						</h5>
						<div class="progress my-process">
							<div class="progress-bar my-process-bar" role="progressbar" style="width: 0%;"
								aria-valuenow="{{newOrder}}" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
					</div>
				</div>
			</div>
			<div class="evaluation-button-component">
				<h3>Chia sẻ nhận xét của bạn về sản phẩm</h3>
				<button onclick="openForm()" id="open-form-btn"
					class="component-default-button open-evaluation-form">Viết nhận xét của bạn</button>
			</div>
		</div>
		{{!-- Form đánh giá về sản phẩm --}}
		<div class="evaluation-form-component" id="evaluation-form">
			<form class="evaluation-form">
				<div class="top">
					<h4>Đánh giá của bạn</h4>
				</div>
				<div class="evaluation-start">
					<p>Đánh giá của bạn về sản phẩm này</p>
					<div class="stars">
						<div>
							<input class="star star-5" id="star-5" type="radio" name="star" checked />
							<label class="star star-5" for="star-5"></label>
							<input class="star star-4" id="star-4" type="radio" name="star" />
							<label class="star star-4" for="star-4"></label>
							<input class="star star-3" id="star-3" type="radio" name="star" />
							<label class="star star-3" for="star-3"></label>
							<input class="star star-2" id="star-2" type="radio" name="star" />
							<label class="star star-2" for="star-2"></label>
							<input class="star star-1" id="star-1" type="radio" name="star" />
							<label class="star star-1" for="star-1"></label>
						</div>
					</div>
				</div>
				<div class="evaluation-title">
					<p>Tiêu đề của nhận xét</p>
					<input type="text" class="title" name="title"
						placeholder="Nhập tiêu đề của nhận xét (không bắt buộc)" />
				</div>
				<div class="evaluation-content">
					<p>Nhận xét của bạn</p>
					<textarea row="5" type="text" class="content" name="content"
						placeholder="Nhập nhận xét của bạn về sản phẩm này"></textarea>
				</div>
				<div class="evaluation-button">
					<button type="submit" class="send-evaluation component-default-button" id="send-form-btn"
						onclick="closeForm()">Gửi nhận xét</button>
				</div>
			</form>
		</div>
		{{!-- Danh sách bình luận --}}

		<div class="comments-component">
			{{#each reviews}}
			<div class="comment">
				<div class="comment-item">
					<div class="my-photo">
						<a href="#"><img class="img-circle" src="/images/customer.jpg" alt="My Image" /></a>
						<h5>{{this.name}}</h5>
						<p class="time">{{this.date}}</p>
					</div>
					<div class="information">
						<div class="stars">
							<form action="">
								{{!-- <input class="star star-5" id="star-5" type="radio" name="star" /> --}}
								<label class="star star-5" for="star-5"></label>
								{{!-- <input class="star star-4" id="star-4" type="radio" name="star" /> --}}
								<label class="star star-4" for="star-4"></label>
								{{!-- <input class="star star-3" id="star-3" type="radio" name="star" /> --}}
								<label class="star star-3" for="star-3"></label>
								{{!-- <input class="star star-2" id="star-2" type="radio" name="star" /> --}}
								<label class="star star-2" for="star-2"></label>
								{{!-- <input class="star star-1" id="star-1" type="radio" name="star" /> --}}
								<label class="star star-1" for="star-1"></label>
							</form>
						</div>
						<p class="review">Cực kì hài lòng</p>
						<i class="fab fa-shield-check"></i>
						<p class="buy-already">Đã mua sản phẩm này tại Team13-Shop</p>
						<div class="description js-description">
							<p class="review_detail" itemprop="reviewBody"></p>
							<span>{{this.content}}
								<br>
							</span>
							</p>
						</div>
						<button class="show-comment">Phản hồi</button>
						<button class="hide-comment">Ẩn phản hồi</button>
					</div>
				</div>
				{{/each}}
				<div class="reply-comment-component">
					<div class="reply-comment">
						<div class="my-photo">
							<a href="#"><img class="img-circle" src="/images/avatar.png" alt="My Image" /></a>
							<h5>Unicorn Shop</h5>
							<p class="time">một tháng trước</p>
						</div>
						<div class="information">
							<p class="from-us">Phản hồi từ Unicorn Shop</p>
							<span>Cảm ơn phản hồi của bạn!
								<br>
							</span>
						</div>
					</div>
					<div class="input-comment-component">
						<div class="input-comment">
							<div class="my-photo">
								<a href="#"><img class="img-circle" src="/images/customer.jpg" alt="My Image" /></a>
							</div>
							<textarea rows="2" class="comment" placeholder="Nhập phản hồi của bạn"></textarea>
						</div>
						<button class="public-comment component-default-button">Đăng phản hồi</button>
					</div>
				</div>
			</div>
		</div>
	</div>



	<div class="container product-relate-component">
		<div class="title">
			<div class="inner">
				<h2>Sản phẩm liên quan</h2>
				<a href="/product">Xem tất cả&ensp;<i class="zmdi zmdi-chevron-right"></i></a>
			</div>
		</div>

		<!-- Slide2 -->
		<div class="content">
			<div class="row">
				{{#each productRelates}}
				<div class="col-6 col-sm-6 col-md-6 col-lg-4 col-xl-3 d-flex" id={{this.catergory}}>
					<div class="component-product card">
						<div class="product-image">
							<img data-toggle="tooltip" title="{{this.name}}" src="{{this.img}}" class="card-img-top"
								alt="...">
							<a href="/product/detail/{{this._id}}" class="stretched-link"></a>
							<div class="deal-tag">30%</div>
							<div class="hover-div">
								<a href="#"><i class="fas fa-shopping-cart"></i>&ensp;Mua hàng</a>
								<div>&nbsp;|&nbsp;</div>
								<a href="/product/detail/{{this._id}}" class="mr-3"><i class="far fa-eye"></i>&ensp;Chi
									tiết</a>
							</div>
						</div>

						<div class="card-body">
							<a href="/product/detail/{{this._id}}" class="card-title m-0">{{this.name}}</a>
							<div class="m-0 mt-1 d-flex justify-content-center">
								<span class="sale-price">{{formatPrice this.price}}<u>đ</u></span>
								<span class="original-price ml-3 js-cost">
									{{formatPrice this.originalPrice}}<u>đ</u>
								</span>
							</div>
							<button class="btn favorite-btn"><i class="far fa-heart"></i></button>
						</div>
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</section>


